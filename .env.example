# ============================================
# WhatsApp Connect - Environment Configuration
# ============================================
# Copy this file to .env and fill in your actual values

# ============================================
# Whapi.cloud Configuration
# ============================================
# Get your Whapi API token from: https://whapi.cloud/
WHAPI_API_TOKEN=your_whapi_api_token_here

# Whapi API base URL (default: https://gate.whapi.cloud)
WHAPI_API_URL=https://gate.whapi.cloud/

# Your Whapi channel ID (e.g., FALCON-SW9M2)
WHAPI_CHANNEL_ID=your_channel_id_here

# WhatsApp Business number in format: country_code + number (e.g., 918856946303)
WHATSAPP_NUMBER=your_whatsapp_number_here

# ============================================
# Backend API Configuration
# ============================================
# URL of the BrainyTots backend API
BACKEND_API_URL=https://bt-development.skillit.in

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@host:port/database_name

# ============================================
# Redis Configuration
# ============================================
# Redis URL for Celery task queue (future use)
# Format: redis://host:port/db_number
REDIS_URL=redis://localhost:6379/0

# ============================================
# Session Configuration
# ============================================
# Session timeout in hours (default: 24)
SESSION_TIMEOUT_HOURS=24

# Delay before sending reminder messages in hours (default: 2)
REMINDER_DELAY_HOURS=2

# Maximum hours to allow session resumption (default: 48)
MAX_RESUME_HOURS=48

# ============================================
# Server Configuration
# ============================================
# Host to bind the server (default: 0.0.0.0)
HOST=0.0.0.0

# Port to run the server on (default: 8001)
PORT=8001

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL (default: INFO)
LOG_LEVEL=INFO
